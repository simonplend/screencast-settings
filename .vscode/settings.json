{
    // Themes
    "workbench.colorTheme": "Ayu Mirage Bordered",
    "workbench.iconTheme": "ayu",

    // Font and text settings
    // TODO: Change to Fira Code
    "editor.fontFamily": "'SauceCodePro Nerd Font', 'monospace', monospace",
    "editor.fontLigatures": false,
    "window.zoomLevel": 2,
    "editor.fontSize": 13, // 18 OR 13 * 1.4 (zoomLevel: 2) = 18.2
    "terminal.integrated.fontSize": 13,
    "editor.lineHeight": 22,

    // Editor settings
    // TODO: Turn off rulers
    "editor.rulers": [80,120],
    "editor.insertSpaces": false,
    "editor.tabSize": 2,
    "editor.minimap.enabled": false,
    "editor.quickSuggestions": {
        "comments": "off",
        "strings": "off",
        "other": "off"
    },
    "editor.quickSuggestionsDelay": 1000000,
    "editor.hover.enabled": false,
    "editor.suggestOnTriggerCharacters": false,
    "editor.wordBasedSuggestions": false,
    "editor.parameterHints.enabled": false,
    "editor.lightbulb.enabled": false,
    "editor.formatOnSave": false,
    "files.insertFinalNewline": true,
    "editor.lineNumbers": "off",
    "editor.renderWhitespace": "none",
    "editor.cursorBlinking": "solid",

    // Layout settings
    "breadcrumbs.enabled": false,
    "workbench.activityBar.visible": false,
    "workbench.statusBar.visible": false,

    // Explorer and files settings
    "explorer.confirmDragAndDrop": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        ".vscode": true,
        "node_modules": false,
        "package-lock.json": true,
        "seed.js": true,
        "README.md": true
    },

    // Screencast mode settings
    "screencastMode.onlyKeyboardShortcuts": true,
    // TODO: Screencast Mode: Font Size

    // Extension settings
    "gitlens.mode.active": "zen",

    // Terminal settings
    // "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "workbench.panel.defaultLocation": "right",

    // Git settings
    "git.enabled": false,
    "git.decorations.enabled": false,
}

